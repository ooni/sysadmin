[Unit]
Description=TCP metrics prometheus file

[Service]
User=root
Group=root

ExecStartPre=/usr/bin/install --owner root --group root --mode 0755 --directory {{ node_exporter_textfiles_path }}

ExecStart=/usr/local/sbin/tcpmetrics \
  --textfile {{ node_exporter_textfiles_path }}/tcpmetrics.prom

KillMode=process
Restart=always

[Install]
WantedBy=multi-user.target
